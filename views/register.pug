doctype html
html
    head
        title register
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
        link(rel="stylesheet", href="stylesheets/css/bootstrap.min.css")
        link(rel="stylesheet", href="stylesheets/register.css")
    body
        .content
            .phone-register
                form(action="/register", method="post", onsubmit="return check(this)")
                    input(type="text", placeholder="用户名", name="user", id="username")
                    span#userError.tipbox
                    input(type="password", placeholder="密码", name="password", id="password")
                    span#passError.tipbox
                    input(type="password", placeholder="再次输入密码", name="secPass", id="secPass")
                    span#secError.tipbox
                    input(type="text", placeholder="联系方式", name="telephone", id="telephone")
                    span#phoneError.tipbox
                    input(type="text", placeholder="email", name="email", id="email")
                    span#emailError.tipbox
                    input(type="text", placeholder="qq", name="qq", id="qq")
                    span#qqError.tipbox
                    input(type="submit", class="btn btn-success", value="立即注册")
                    span#tipBox #{errors}
        script(src="javascripts/jquery-3.3.1.js")
        script(src="javascripts/register.js")