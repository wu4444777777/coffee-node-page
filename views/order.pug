doctype html
head
    title order
    link(rel="stylesheet", href="stylesheets/order.css")
    script(src="javascripts/jquery-3.3.1.js")
    script(src="javascripts/order.js")
body
    h1
        a(href="javascript:history.back(-1)")
            img(src="images/backO.svg")
        span.confirm 确认订单
    .address
        h2
            span.people 收货人：小七
            span.phone 18148789170
        h3
            span.symbol: img(src="images/address.svg")
            span.get 收获地址：深圳龙岗宝南路
            span.tip 收货不便时，可选择免费代收服务
    .product
        each list in cart
            .proList
                img(src=list.image)
                .intro
                    span#name #{list.name}
                    span#price ￥#{list.price}
                    span#num x#{list.num}
        .send 邮寄方式
        .fee 运费险
        .account
            span#sumNum 共一件商品
            span#sum 小计：
                span.price
        .count
            span 合计：
                span.price
            button.submit 提交订单
